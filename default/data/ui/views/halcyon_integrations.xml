<form version="1.1" theme="light">
  <label>ğŸ”Œ Halcyon Integrations</label>
  <description>Configured third-party and platform integrations</description>

  <row>
    <panel>
      <title>ğŸ”Œ Total Integrations</title>
      <single>
        <search>
          <query>
            index=security_halcyon sourcetype="halcyon:integration"
            | stats count
          </query>
        </search>
        <option name="underLabel">Integrations</option>
      </single>
    </panel>

    <panel>
      <title>ğŸ“Š Integrations by Type</title>
      <chart>
        <search>
          <query>
            index=security_halcyon sourcetype="halcyon:integration"
            | stats count by type
            | sort - count
          </query>
        </search>
        <option name="charting.chart">bar</option>
      </chart>
    </panel>

    <panel>
      <title>âš™ï¸ Integrations by Status</title>
      <chart>
        <search>
          <query>
            index=security_halcyon sourcetype="halcyon:integration"
            | stats count by status
            | sort - count
          </query>
        </search>
        <option name="charting.chart">bar</option>
      </chart>
    </panel>
  </row>

  <row>
    <panel>
      <title>ğŸ“‹ Integration Details</title>
      <table>
        <search>
          <query>
            index=security_halcyon sourcetype="halcyon:integration"
            | table id name type status createdDate lastUpdatedDate
            | sort name
          </query>
        </search>
        <option name="count">50</option>
        <option name="wrap">true</option>
        <option name="drilldown">none</option>
      </table>
    </panel>
  </row>
</form>

<form version="1.1" theme="light">
  <label>ğŸ”” Halcyon Webhooks</label>
  <description>Configured outbound webhooks for alerting and automation</description>

  <row>
    <panel>
      <title>ğŸ”” Total Webhooks</title>
      <single>
        <search>
          <query>
            index=security_halcyon sourcetype="halcyon:webhook"
            | stats count
          </query>
        </search>
        <option name="underLabel">Webhooks</option>
      </single>
    </panel>

    <panel>
      <title>ğŸ“Š Webhooks by Status</title>
      <chart>
        <search>
          <query>
            index=security_halcyon sourcetype="halcyon:webhook"
            | stats count by status
            | sort - count
          </query>
        </search>
        <option name="charting.chart">bar</option>
      </chart>
    </panel>

    <panel>
      <title>âš™ï¸ Webhooks by Event Type</title>
      <chart>
        <search>
          <query>
            index=security_halcyon sourcetype="halcyon:webhook"
            | stats count by eventType
            | sort - count
          </query>
        </search>
        <option name="charting.chart">bar</option>
      </chart>
    </panel>
  </row>

  <row>
    <panel>
      <title>ğŸ“‹ Webhook Details</title>
      <table>
        <search>
          <query>
            index=security_halcyon sourcetype="halcyon:webhook"
            | table id name url eventType status createdDate lastUpdatedDate
            | sort name
          </query>
        </search>
        <option name="count">50</option>
        <option name="wrap">true</option>
        <option name="drilldown">none</option>
      </table>
    </panel>
  </row>
</form>

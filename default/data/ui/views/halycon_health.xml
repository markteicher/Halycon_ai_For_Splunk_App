<form version="1.1" theme="light">
  <label>ğŸ’“ Platform Health</label>
  <description>API availability, ingestion stability, and Halcyon.ai operational health</description>

  <!-- ================= KPI ROW ================= -->
  <row>
    <panel>
      <title>ğŸ’“ Health Records</title>
      <single>
        <search>
          <query>
            index=security_halcyon sourcetype="halcyon:health"
            | stats count
          </query>
        </search>
        <option name="underLabel">Events</option>
      </single>
    </panel>

    <panel>
      <title>ğŸš¨ Error Events</title>
      <single>
        <search>
          <query>
            index=security_halcyon sourcetype="halcyon:health" status="error"
            | stats count
          </query>
        </search>
        <option name="underLabel">Errors</option>
      </single>
    </panel>

    <panel>
      <title>â±ï¸ Last Seen</title>
      <single>
        <search>
          <query>
            index=security_halcyon sourcetype="halcyon:health"
            | stats latest(_time) as lastSeen
            | eval lastSeen=strftime(lastSeen,"%Y-%m-%d %H:%M:%S")
          </query>
        </search>
        <option name="underLabel">Timestamp</option>
      </single>
    </panel>
  </row>

  <!-- ================= HEALTH EVENTS ================= -->
  <row>
    <panel>
      <title>ğŸ“‹ Health Event Log</title>
      <table>
        <search>
          <query>
            index=security_halcyon sourcetype="halcyon:health"
            | eval eventTime=strftime(_time,"%Y-%m-%d %H:%M:%S")
            | table eventTime status component message
            | sort -eventTime
          </query>
        </search>
        <option name="count">25</option>
        <option name="wrap">true</option>
        <option name="drilldown">none</option>
      </table>
    </panel>
  </row>

  <!-- ================= STATUS TREND ================= -->
  <row>
    <panel>
      <title>ğŸ“ˆ Health Status Trend</title>
      <chart>
        <search>
          <query>
            index=security_halcyon sourcetype="halcyon:health"
            | timechart span=1h count by status
          </query>
        </search>
        <option name="charting.chart">column</option>
        <option name="legend.placement">right</option>
      </chart>
    </panel>
  </row>

  <!-- ================= INGEST LATENCY ================= -->
  <row>
    <panel>
      <title>â³ Ingestion Latency</title>
      <chart>
        <search>
          <query>
            index=security_halcyon sourcetype="halcyon:health" latencyMs=*
            | timechart span=1h avg(latencyMs) as avg_latency_ms
          </query>
        </search>
        <option name="charting.chart">line</option>
        <option name="charting.axisY.title">Milliseconds</option>
        <option name="legend.placement">none</option>
      </chart>
    </panel>
  </row>

</form>
